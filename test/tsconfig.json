{
  "compilerOptions": {
    "lib": ["dom", "es2015", "es2016", "es2017", "esnext"],
    "sourceMap": true,
    "target": "es5",
    "module": "commonjs",
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "removeComments": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitAny": true,
    "strictNullChecks": true
  },
  "exclude": ["node_modules/**/*"]
}
